extends ../layout

block content
  section.hero(style="padding: 60px;")
    .hero-content(style="max-width: 400px; margin: 0 auto;")
      h2 Login
      p Access your account and view your cart.

      form.auth-form(method="POST", action="/login")
        input.input-field(type="text", name="username", placeholder="Username", required)
        input.input-field(type="password", name="password", placeholder="Password", required)
        button.btn-primary(type="submit", style="margin-top: 20px;") Login

      // Register button below login form
      p.login-register(style="text-align: center; margin-top: 15px;")
        | Don't have an account? 
        a.btn-secondary(href="/register") Register
