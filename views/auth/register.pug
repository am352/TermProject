extends ../layout

block content
  section.hero
    .hero-content
      h2 Register
      p Create a new account to start shopping.

      form.auth-form(method="POST", action="/register")
        input.input-field(type="email", name="email", placeholder="Email", required)
        input.input-field(type="text", name="username", placeholder="Username", required)
        input.input-field(type="password", name="password", placeholder="Password", required)
        input.input-field(type="password", name="confirmPassword", placeholder="Confirm Password", required)

        button.btn-primary(type="submit") Create Account

        a.btn-secondary(href="/login") Back to Login
